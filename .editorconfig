# http://editorconfig.org

# top-most EditorConfig file
root = true

# all files
[*]
indent_style = tab  # "tab" or "space"
# indent_size = 2 # uses value of tab_width when set to "tab"
# tab_width = 4 # defaults to value of indent_size
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# limited support among editors
# max_line_length = 160 # force hard line wrapping

# markdown files
# [*.md]
# trim_trailing_whitespace = false

# python
# [*.py]
# indent_style = tab
# indent_size = 4
# tab_width = 4
